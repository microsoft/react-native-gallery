{
  "name": "rngallery",
  "version": "1.0.18.0",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "react-native rnx-test --platform windows",
    "test:update": "react-native rnx-test --platform windows -u",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "windows": "npx @react-native-community/cli run-windows",
    "postinstall": "patch-package",
    "test:windows": "jest --config jest.config.windows.js"
  },
  "dependencies": {
    "@react-native-clipboard/clipboard": "^1.14.0",
    "@react-native-community/masked-view": "^0.1.11",
    "@react-native/metro-config": "0.74.81",
    "@react-navigation/drawer": "^7.0.0-alpha.0",
    "@react-navigation/native": "^6.0.10",
    "@react-navigation/stack": "^6.3.12",
    "@rnx-kit/metro-config": "^1.3.15",
    "@types/jest": "^29.5.3",
    "eslint-plugin-ft-flow": "^3.0.11",
    "lowlight": "^1.17.0",
    "patch-package": "^7.0.0",
    "postinstall-postinstall": "^2.1.0",
    "react": "19.0.0",
    "react-native": "0.79.2",
    "react-native-gesture-handler": "2.9.0",
    "react-native-reanimated": "^1.10.0",
    "react-native-safe-area-context": "^4.2.4",
    "react-native-screens": "^2.9.0",
    "react-native-windows": "0.79.2"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.20.0",
    "@react-native/babel-preset": "0.79.2",
    "@react-native/eslint-config": "0.79.2",
    "@react-native/metro-config": "0.79.2",
    "@react-native/typescript-config": "0.79.2",
    "@rnx-kit/cli": "^0.16.10",
    "@rnx-kit/jest-preset": "^0.1.17",
    "@types/lowlight": "^0.0.1",
    "@types/metro-config": "^0.76.3",
    "@types/react": "^19.0.0",
    "@types/react-test-renderer": "^19.0.0",
    "babel-jest": "^29.6.3",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "metro-config": "^0.80.12",
    "prettier": "2.8.8",
    "react-native-windows-hello": "^1.1.0",
    "react-test-renderer": "19.0.0",
    "typescript": "5.0.4"
  },
  "jest": {
    "preset": "@rnx-kit/jest-preset",
    "modulePathIgnorePatterns": [
      "<rootDir>/lib/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|react-native-xaml|@react-native|react-native-windows|react-native-config|@react-native-community|react-native-print|react-native-webview|react-native-windows-hello|react-native-permissions|react-native-tts|react-native-gesture-handler)/)"
    ],
    "setupFiles": [
      "<rootDir>/jest-setup.js"
    ]
  },
  "main": "src/index.js",
  "module": "lib/module/index.js",
  "types": "lib\\typescript\\src\\index.d.ts",
  "files": [
    "src",
    "lib"
  ],
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "packageManager": "yarn@4.1.1",
  "react-native-windows": {
    "init-windows": {
      "name": "rngallery",
      "namespace": "rngallery",
      "template": "cpp-app"
    }
  }
}
